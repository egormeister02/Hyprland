{
    "layer": "top",
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 50,
    "modules-left": ["hyprland/language", "clock","custom/weather", "hyprland/workspaces"],
    "modules-center": ["cpu","memory"],
    "modules-right": ["network", "bluetooth", "temperature","battery","backlight","pulseaudio","pulseaudio#microphone", "custom/outline"],

    "cpu": {
        "interval": 1,
        "format": "{icon0}{icon1}{icon2}{icon3} {usage:>2}% Ôãõ",
        "format-icons": ["‚ñÅ", "‚ñÇ", "‚ñÉ", "‚ñÑ", "‚ñÖ", "‚ñÜ", "‚ñá", "‚ñà"],
        "on-click": "gnome-system-monitor"
    },

    "memory": {
        "interval": 1,
        "format": "ÔÉâ {used:0.1f}G",
        "on-click": "gnome-system-monitor"
    },
    "hyprland/language": {
        //"format": "Lang: {long}",
        "format-en": "en",
        "format-ru": "ru"
        //"keyboard-name": "at-translated-set-2-keyboard"
    },

    "hyprland/workspaces": {
        // Formatting omitted for brevity
        "ignore-workspaces": [
            "(special:)?chrome-sharing-indicator"
        ]
    },

   "custom/weather" : {
        //shows the current weather and forecast
        "tooltip" : true,
        "format" : "{}",
        "interval" : 30,
        "exec" : "~/.config/waybar/scripts/waybar-wttr.py",
        "return-type" : "json"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },

    "clock": {
    
	"format": "{:%H:%M} ÔÄó ",
	"format-alt": "{:%A, %B %d, %Y (%R)}",
	"tooltip-format": "<tt><small>{calendar}</small></tt>",
    "timezone": "Europe/Moscow",
	"calendar": {
		"mode"          : "year",
		"mode-mon-col"  : 3,
		"weeks-pos"     : "right",
		"on-scroll"     : 1,
		"on-click-right": "mode",
		"format": {
			"months":     "<span color='#ffead3'><b>{}</b></span>",
			"days":       "<span color='#ecc6d9'><b>{}</b></span>",
			"weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
			"weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
			"today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
		}
	},
	"actions": {
		"on-click-right": "mode",
		"on-click-forward": "tz_up",
		"on-click-backward": "tz_down",
		"on-scroll-up": "shift_up",
		"on-scroll-down": "shift_down"
	}
    },

    "backlight": {
        "device": "intel_backlight",
        "format": "{icon} {percent}%",
        "format-icons": ["Û∞Éû", "Û∞Éü", "Û∞É†"],
        "on-scroll-up": "brightnessctl set 1%+",
        "on-scroll-down": "brightnessctl set 1%-",
        "min-length": 6
    },

    "battery": {
        "interval": 1,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Ôá¶ {capacity}%",
        "format-plugged": "Ôá¶ {capacity}%",
        "format-alt": "{time} {icon}",
        "format-icons": ["Û∞Çé", "Û∞Å∫", "Û∞Åª", "Û∞Åº", "Û∞ÅΩ", "Û∞Åæ", "Û∞Åø", "Û∞ÇÄ", "Û∞ÇÅ", "Û∞ÇÇ", "Û∞Åπ"],
        "on-click-right": "gnome-power-statistics"
    },

    "custom/outline": {
        //"exec": "~/.config/waybar/scripts/launch-outline.sh",
        "format": "üõ°Ô∏è",
        "tooltip-format": "Launch AmneziaVPN Client",
        "on-click": "AmneziaVPN"
    },

    "pulseaudio": {
        "format": "{icon} {volume}%",
        "tooltip": false,
        "format-muted": "ÔÄ¶ Muted",
        "on-click": "pamixer -t",
        "on-click-right": "pavucontrol",
        "on-scroll-up": "pamixer -i 5",
        "on-scroll-down": "pamixer -d 5",
        "scroll-step": 5,
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "ÔÄ•",
            "headset": "ÔÄ•",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        }
    },

    "pulseaudio#microphone": {
        "format": "{format_source}",
        "format-source": "ÔÑ∞ {volume}%",
        "format-source-muted": "ÔÑ± Muted",
        "on-click": "pamixer --default-source -t",
        "on-scroll-up": "pamixer --default-source -i 5",
        "on-scroll-down": "pamixer --default-source -d 5",
        "on-click-right": "pavucontrol",
        "scroll-step": 5
    },
        
    "temperature": {
        "interval": 1,
        "thermal-zone": 0,
        "format": "{temperatureC}¬∞C Ôãâ",
        "critical-threshold": 80,
        "format-critical": "{temperatureC}¬∞C Ôãá",
        "on-click": "psensor"
    },

    "network": {
        "interface": "wlp0s20f3", // –£–±–µ–¥–∏—Ç–µ—Å—å, —á—Ç–æ –∏—Å–ø–æ–ª—å–∑—É–µ—Ç–µ –ø—Ä–∞–≤–∏–ª—å–Ω–æ–µ –∏–º—è –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        "format-wifi": "Ôá´  {signalStrength}%",
        "format-ethernet": "{ipaddr}/{cidr}",
        "tooltip-format": "{essid} - {ifname} via {gwaddr}",
        "format-linked": "{ifname} (No IP)",
        "format-disconnected": "Disconnected ‚ö†",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}",
        "on-click-right": "kitty nmtui"
    },

    "bluetooth": {
	    "format": "Ôäî {status}",
	    "format-disabled": "", // an empty format will hide the module
	    "format-connected": "Ôäî {num_connections}",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}",
        "on-click": "bash ~/.config/waybar/scripts/bluetooth-switch.sh",
        "on-click-right": "blueman-manager"
    }
}
